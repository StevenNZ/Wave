<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CartActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/off_white"
        android:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Cart"
            app:titleCentered="true"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="670dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginHorizontal="30dp">

            <RelativeLayout
                android:id="@+id/cartEmptyLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp">

                <ImageView
                    android:id="@+id/cartImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/shopping_cart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_empty"
                    android:layout_below="@id/cartImage"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:lineSpacingExtra="10dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/checkoutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cartEmptyLayout"
                android:layout_marginTop="80dp"
                android:layout_marginHorizontal="15dp">

                <RelativeLayout
                    android:id="@+id/totalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/cartTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$000.00 NZD"
                        android:textSize="20sp"
                        android:layout_alignParentEnd="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="20sp"
                        android:textAlignment="viewEnd"/>

                </RelativeLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/totalLayout"
                    android:text="Checkout"
                    android:textAllCaps="false"
                    android:padding="15dp"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_background"
        android:paddingHorizontal="14dp"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemPaddingBottom="4dp"
        app:itemPaddingTop="3dp"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="selected" />
</androidx.constraintlayout.widget.ConstraintLayout>
