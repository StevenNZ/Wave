<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:padding="8dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- Top LinearLayout -->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pop_name"
                android:text="Album Title"
                style="@style/itemAlbum"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pop_artist"
                android:layout_marginTop="2dp"
                android:text="Artist"
                android:fontFamily="@font/opensans_medium"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/pop_price" />

                <TextView
                    android:id="@+id/pop_cents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pop_price"
                    android:layout_alignTop="@id/pop_price"
                    android:text="00"
                    android:textSize="11sp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </LinearLayout>

        <!-- Bottom LinearLayout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/graduation_image"
                android:scaleType="centerCrop"
                android:id="@+id/pop_image"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.cardview.widget.CardView>