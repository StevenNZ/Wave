<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:padding="12dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <!-- Top LinearLayout -->
        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popular_name"
                android:text="Album Title"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:lineHeight="18dp"
                android:textFontWeight="700"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/popular_artist"
                android:layout_marginTop="2dp"
                android:text="Artist"
                android:textSize="12dp"
                android:lineHeight="22dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textFontWeight="700"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineHeight="30sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/pop_price" />

                <TextView
                    android:id="@+id/pop_cents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/pop_price"
                    android:text="00"
                    android:textFontWeight="700"
                    android:textSize="8dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="2dp" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Bottom LinearLayout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/graduation_image"
                android:scaleType="centerCrop"
                android:id="@+id/popular_image"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.cardview.widget.CardView>